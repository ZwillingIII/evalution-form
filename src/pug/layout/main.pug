include ../mixins/style
include ../mixins/script
include ../mixins/image
include ../mixins/sprite
include ../mixins/externalCSS
include ../mixins/externalJS

block variables

doctype html
html
    head
        title #{title}
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
        +externalCSS('https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', 'sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH')
        +externalCSS('https://cdnjs.cloudflare.com/ajax/libs/ion-rangeslider/2.3.1/css/ion.rangeSlider.min.css','')
        +style('libs.min.css')
        +style('common.css')
        +style('tab-style.css')
        +style('tabs.css')
        +style('global.css')
        block styles
    body
        .content
            include ../partials/header.pug
            block content
        include ../partials/footer.pug
        +externalJS('https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js','')
        +script('libs.min.js')
        +script('global.min.js')
        +script('main.min.js')
        +externalJS('https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js', 'sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz')
        +externalJS('https://cdnjs.cloudflare.com/ajax/libs/ion-rangeslider/2.3.1/js/ion.rangeSlider.min.js','')
        block scripts
